        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainAty" android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.RecyclerViewAty" android:label="RecyclerView">
        </activity>
        <activity android:name=".activity.ListViewAty" android:label="ListView">

        </activity>

        <activity android:name=".activity.CustomElasticLayoutAty" android:label="ScrollView">

        </activity>
    </application>

</manifest>
